{
  "compilerOptions": {
      "esModuleInterop": true,
      "target": "ES2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "outDir": "./out",
      "sourceMap": true,
      "resolveJsonModule": true,
      "strictNullChecks": true
  },
  "include": [
      "src/**/*.ts",
      "test"
  ],
  "exclude": [
      "node_modules"
  ]
}